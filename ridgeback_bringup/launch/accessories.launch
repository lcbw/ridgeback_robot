<!--
Launch driver components of Ridgeback's supported accessories.

Be careful that the defaults in this file are kept aligned with those
in the URDF. See ridgeback_description/urdf/accessories.urdf.xacro.
-->
<launch>
  <!-- Primary Hokuyo UST-10LX LIDAR, base is front-facing but support for addtional rear. -->
  <group if="$(env RIDGEBACK_FRONT_HOKUYO_LASER 0)">
    <node pkg="urg_node" name="urg_front" exec="urg_node">
    <param name="ip_address" value="$(env RIDGEBACK_FRONT_LASER_HOST 192.168.131.20)" />
      <param name="frame_id" value="front_laser" />
      <param name="angle_min" value="-2.35619" />
      <param name="angle_max" value="2.35619" />
      <remap from="scan" to="front/scan" />
    </node>
  </group>

  <group if="$(env RIDGEBACK_REAR_HOKUYO_LASER 0)">
    <node pkg="urg_node" name="urg_rear" exec="urg_node">
      <param name="ip_address" value="$(env RIDGEBACK_REAR_LASER_HOST 192.168.131.21)" />
      <param name="frame_id" value="rear_laser" />
      <param name="angle_min" value="-2.35619" />
      <param name="angle_max" value="2.35619" />
      <remap from="scan" to="rear/scan" />
    </node>
  </group>

  <!-- Optional Sick LMS1xx-series LIDAR, generally is front-facing but support for addtional rear. -->
  <group if="$(env RIDGEBACK_FRONT_SICK_LASER 0)">
    <node pkg="lms1xx" name="lms1xx_front" exec="LMS1xx_node">
      <param name="host" value="$(env RIDGEBACK_FRONT_LASER_HOST 192.168.131.20)" />
      <param name="frame_id" value="front_laser" />
      <remap from="scan" to="front/scan" />
    </node>
  </group>

  <group if="$(env RIDGEBACK_REAR_SICK_LASER 0)">
    <node pkg="lms1xx" name="lms1xx_rear" exec="LMS1xx_node">
      <param name="host" value="$(env RIDGEBACK_REAR_LASER_HOST 192.168.131.21)" />
      <param name="frame_id" value="rear_laser" />
      <remap from="scan" to="rear/scan" />
    </node>
  </group>

  <!-- Optional Sick S300-series LIDAR, generally is front-facing but support for addtional rear. -->
  <group if="$(env RIDGEBACK_FRONT_S300_LASER 0)" >
    <push-ros-namespace namespace="s300_front"/> <!-- port and frame_id used to be outside the node but now they're in the node thanks 2 no param server-->
    <node pkg="cob_sick_s300" name="s300_front" exec="cob_sick_s300">
      <param name="port" value="$(env RIDGEBACK_FRONT_S300_PORT /dev/clearpath/s300_front)" />
      <param name="frame_id" value="front_laser" />
      <remap from="scan" to="/front/scan" />
      <remap from="scan_standby" to="/front/scan_standby" />
    </node>
  </group>

  <group if="$(env RIDGEBACK_REAR_S300_LASER 0)">
    <push-ros-namespace namespace="s300_rear"/>  <!-- port and frame_id used to be outside the node but now they're in the node thanks 2 no param server-->
    <node pkg="cob_sick_s300" name="s300_rear" exec="cob_sick_s300">
      <param name="port" value="$(env RIDGEBACK_REAR_S300_PORT /dev/clearpath/s300_rear)" />
      <param name="frame_id" value="rear_laser" />
      <remap from="scan" to="/rear/scan" />
      <remap from="scan_standby" to="/rear/scan_standby" />
    </node>
  </group>

  <!-- Legacy support for Microstrain IMU GX2 -->
<!--  <group if="$(env RIDGEBACK_MICROSTRAIN_IMU 0)">
    <node pkg="microstrain_3dmgx2_imu" exec="imu_node" name="microstrain_imu">
      <param name="time_offset" value="-0.040" />
      <param name="port" value="$(env RIDGEBACK_MICROSTRAIN_IMU_PORT /dev/microstrain)" />
      <param name="frame_id" value="$(env RIDGEBACK_MICROSTRAIN_IMU_LINK upgraded)_imu_link" />
      <param name="autocalibrate" value="true" />
      <param name="angular_velocity_stdev" value="0.00017" />
      <param name="max_drift_rate" value="0.001" />
      <remap from="imu" to="$(env RIDGEBACK_MICROSTRAIN_IMU_TOPIC upgraded)_imu" />
    </node>
  </group>-->

  <!-- Support for current Microstrain IMU models, including GX3, GX5, GX25, etc. -->
  <group if="$(env RIDGEBACK_IMU_MICROSTRAIN 0)">
    <include file="$(find-pkg-share microstrain_inertial_driver)/launch/microstrain.launch">
      <arg name="namespace"              let="$(env RIDGEBACK_IMU_MICROSTRAIN_NAME microstrain)" />
      <arg name="node_name"              let="microstrain_inertial_driver" />
      <arg name="params_file"            let="$(find-pkg-share ridgeback_bringup)/config/microstrain.yaml" />
    </include>
  </group>
</launch>
